// ~/tsconfig.json
// The configuration for Typescript.

{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"declaration": true,
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": ["source/"],
	"exclude": ["node_modules/"]
}
